label
  display block
  font-size 80%
  margin-bottom 8px
  margin-left 8px
  box-sizing border-box

input[type="text"], input[type="email"], input[type="number"], select
  display block
  padding 7px
  width 85%
  box-sizing border-box
  border-radius 3px
  border 1px solid border_color
  box-shadow rgba(0,0,0,0.1) 0 1px 3px inset
  outline none
  transition box-shadow 300ms, border-color 300ms
  &:focus
    border-color brand_primary
    box-shadow rgba(0,0,0,0.1) 0 1px 3px inset, brand_primary 0 0 5px

.form-group
  margin-bottom 10px
  &.inline
    clearfix()
    label
      float left
      width 15%
      margin 0
      padding 7px 15px 0
      text-align right
    input, select
      float left
      width 70%