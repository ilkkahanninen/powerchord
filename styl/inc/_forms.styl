form_width = 85%
inline_label_width = 15%
arrow_down_png_base64 = unquote("data:image/png;base64,")

label
  display block
  font-size 80%
  margin-bottom 8px
  margin-left 8px
  box-sizing border-box

input[type="text"], input[type="password"], input[type="email"], input[type="number"], select, .select-control
  appearance none
  -webkit-appearance none
  display block
  background input_background
  color input_text_color
  padding 7px
  width form_width
  box-sizing border-box
  border-radius 3px
  border 1px solid input_border_color
  box-shadow rgba(0,0,0,0.1) 0 1px 3px inset
  outline none
  transition box-shadow 300ms, border-color 300ms
  &:focus
    border-color brand_primary
    box-shadow rgba(0,0,0,0.1) 0 1px 3px inset, brand_primary 0 0 5px

.select-control
  padding 0
  background url(arrow_down_png_base64) no-repeat right 7px center
  background-color white  
  select
    background transparent
    border none
    border-radius 0
    box-shadow none
    width 100%

.form-group
  margin-bottom 10px

  input[type="radio"], input[type="checkbox"]
    display none
    & + label
      position relative
      display inline-block
      font-size 100%
      cursor pointer
      padding-left 28px
      margin-right 5px
      &:before
        content ""
        display inline-block
        width 14px
        height 14px
        margin-right 10px
        position absolute
        left 0
        bottom 2px
        background input_background
        box-shadow rgba(0,0,0,0.1) 0 1px 3px inset
        text-shadow rgba(0,0,0,0.1) 0 1px 3px
        border 1px solid input_border_color
        border-radius 2px
      &:hover
        &:before
          background input_background * 0.95
    &:checked + label:before
      font sans-serif
      content "\2717"
      color input_text_color
      font-size 14px
      text-align center
      line-height 15px

  input[type="radio"]
    & + label:before
      border-radius 8px
    &:checked + label:before
      content "\25CF"
      font-size 20px
      text-align center
      line-height 13px

  &.inline
    clearfix()
    label
      float left
      width inline_label_width
      margin 0
      padding 7px 15px 0
      text-align right
    input, select, .select-control
      float left
      width form_width - inline_label_width

    input[type="radio"], input[type="checkbox"], input[type="submit"]
      width auto
      & + label
        width auto