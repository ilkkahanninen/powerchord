form_width = 85%
inline_label_width = 15%
arrow_down_png_base64 = unquote("data:image/png;base64,")

label
  display block
  font-size 80%
  margin-bottom 8px
  margin-left 8px
  box-sizing border-box

input[type="text"], input[type="email"], input[type="number"], select, .select-control
  appearance none
  -webkit-appearance none
  display block
  background white
  padding 7px
  width form_width
  box-sizing border-box
  border-radius 3px
  border 1px solid border_color
  box-shadow rgba(0,0,0,0.1) 0 1px 3px inset
  outline none
  transition box-shadow 300ms, border-color 300ms
  &:focus
    border-color brand_primary
    box-shadow rgba(0,0,0,0.1) 0 1px 3px inset, brand_primary 0 0 5px

.select-control
  padding 0
  background url(arrow_down_png_base64) no-repeat right 7px center
  background-color white  
  select
    background transparent
    border none
    border-radius 0
    box-shadow none
    width 100%

.form-group
  margin-bottom 10px
  &.inline
    clearfix()
    label
      float left
      width inline_label_width
      margin 0
      padding 7px 15px 0
      text-align right
    input, select, .select-control
      float left
      width form_width - inline_label_width