clearfix()
  &:after
    content ""
    display table
    clear both

gradient(from, to)
  background ((from + to) / 2)
  background unquote('-moz-linear-gradient(top,' + from + ' 0%,' + to + ' 100%)')
  background unquote('-webkit-gradient(linear,left top,left bottom,color-stop(0%,' + from + '),color-stop(100%,' + to + '))')
  background unquote('-webkit-linear-gradient(top,' + from + ' 0%,' + to + ' 100%)')
  background unquote('-o-linear-gradient(top,' + from + ' 0%,' + to + ' 100%)')
  background unquote('-ms-linear-gradient(top,' + from + ' 0%,' + to + ' 100%)')
  background unquote('linear-gradient(to bottom,' + from + ' 0%,' + to + ' 100%)')
  filter unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr='" + from + "', endColorstr='" + to + "',GradientType=0 )")
