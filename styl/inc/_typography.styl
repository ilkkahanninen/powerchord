body
  color text_black

p
  margin 0 0 1em 0
  line-height 170%
  &:last-child
    margin-bottom 0

b, strong
  font-weight bold
  color brand_primary

a
  color brand_primary
  text-decoration none
  &:hover
    text-decoration underline

i
  font-style italic

h1, h2, h3, h4, h5, h6
  margin 2em 0 1em 0
  font-weight bold
  &:first-child
    margin-top 0

h1
  font-size 200%
h2
  font-size 160%
h3
  font-size 140%
h4
  font-size 130%
h5
  font-size 120%
h6
  font-size 110%
